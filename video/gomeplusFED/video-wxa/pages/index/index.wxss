/**index.wxss**/
page{
  background-color: #eee;
}
.index-item{
    padding: 20rpx;
    background: #FFF;
    margin-bottom: 20rpx;
}
.index-head{
    margin-bottom: 10rpx;
    overflow: hidden;
    display: flex;
    justify-content: space-between;
}
.index-avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    font-size: 34rpx;
}
.index-author{
    margin-left: 20rpx;
    flex: 1;
    line-height: 80rpx;
}
.index-video-type{
    padding: 6rpx 10rpx;
    border-radius: 10rpx;
    color: #FFF;
    background-color: #f30;
    font-size: 28rpx;
    align-self: center;
}
.index-preview{
    width: 100%;
    height: 400rpx;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
}
.index-preview-img{
    width: 110rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    top:50%;
    margin: -55rpx 0 0 -55rpx;
}
.index-live-flag{
    padding: 10rpx 20rpx 10rpx 20rpx;
    color: #FFF;
    background-color: #d7493a;
    font-size: 32rpx;
    line-height:32rpx;
    font-weight: bold;
    position: absolute;
    right: 0;
    bottom: 0;
}
.index-video-name{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 36rpx;
    margin: 20rpx 0;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.nomore{
    border-top:1rpx solid #CCC;
    margin-top:30rpx;
    font-size:28rpx;
    text-align:center;
    color:#999;
}
.nomore-text{
    position:relative;
    top:-14rpx;
    padding:0 20rpx;
    background-color:#eee;
}