block content
	include ../public/menu-generalize.jade
	div.content-main
		div.amp-account
			include ../public/crumbs.jade
			div.account-set
				div.set-option
					a(href="#").btn.btn-normal 新建投放计划
					a(href="#").btn.btn-normal 启用
					a(href="#").btn.btn-normal 暂停
					a(href="#").btn.btn-normal 删除
