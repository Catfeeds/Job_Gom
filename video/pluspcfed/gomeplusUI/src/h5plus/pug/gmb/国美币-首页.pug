		body, div, header, a, h1, p, span{padding: 0;margin:0;}
		html, body{height: 100%;}
		html{font-size: 50px;}
		body{max-width: 640px;margin-left: auto;margin-right: auto;background-color: #fff;position: relative;}
		a{-webkit-tap-highlight-color: transparent;}
		.home-box{font-size: .32rem;}
		.home-box .header{line-height: .88rem;text-align: center;position: relative;}
		.home-box .header .h-back{position: absolute;left: .32rem;top: .32rem;width: .2rem;height: .2rem;display: inline-block;border-top: 1px solid #fff;border-left: 1px solid #fff;-webkit-transform: rotate(-45deg);-moz-transform: rotate(-45deg);-mo-transform: rotate(-45deg);-o-transform: rotate(-45deg);transform: rotate(-45deg);margin-right: .1rem;		}
