		.home-box .red-bg{height: 4rem;background-color: #ff5c5c;padding-bottom: 1.26rem;;}
		.home-box .red-bg .price{color: #fff;margin: 1.1rem 0 0 .85rem;position: relative;}
		.home-box .price .mark{font-size: .3rem;margin-left: -.37rem;}
		.home-box .price .dot-b{font-size: 1.5rem;}
		.home-box .price .dot-a{font-size: .8rem;}
		.home-box .txt p{font-size: .24rem;color: #999;text-align: center;}
		.home-box .txt .p-t{margin-top: .36rem;}
		.home-box .txt .p-b{position: absolute;bottom: .5rem;width: 100%;}
		.home-box .p-1 .dot-b{font-size: 1.4rem;}
		.home-box .p-1 .dot-a{font-size: .7rem;}
		.home-box .p-2 .dot-b{font-size: 1.24rem;}
		.home-box .p-2 .dot-a{font-size: .6rem;}
		.home-box .p-3 .dot-b{font-size: 1.1rem;}
		.home-box .p-3 .dot-a{font-size: .5rem;}
		.home-box .p-4 .dot-b{font-size: .96rem;}
		.home-box .p-4 .dot-a{font-size: .4rem;}
