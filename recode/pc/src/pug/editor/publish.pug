doctype html
html(lang="zh-CN")
    meta(charset="utf-8")
    link(type="text/css",rel="stylesheet",href="../../css/public/public.css")
    link(type="text/css",rel="stylesheet",href="../../css/module/talentPublishTopic.css")
    link(type="text/css",rel="stylesheet",href="../../css/public/cropper.css")
    include ./global-config.pug
        
    body.opg
        div.wrap-box.release-topic-wrap
            div.crumbs-box
                span.disabled 圈子
                em
                span.crnmb-activ 发布话题
            div.edit-wrap
              div.pop-box-backdrop
                div.preview-layer
                  p.preview-title 上传封面
                  div.preview-content
                    div.position-abso.load-ing(data-node="noticeBox" style="display: none;")
                          div.picture-bx
                          div.load-failed-bx
                            span.opacity-all
                            span.top-left
                            span.top-right
                            span.bottom-left
                            span.bottom-right
                          div.load-failed-txt.failure
                            span(data-node="noticeInfo") 图片上传失败！
                            em.icon.iconn-24
                            a.active(href="javascript:;" data-action="retry") 重新上传
                            span
                          div.load-failed-txt.image-load.loading-img-progress
                            div.progress-bar-bx
                              span(data-node="uploadProgress" style="width: 100%;")    
                            p(data-node="loadNotice") 正在上传...
                            //- <!--img.img250(src="../../images/public/circle-default-head.jpg")-->
                    img(src="http://js.dev.meixincdn.com:1314/CDN8053/dist/images/public/circle-default-head.jpg" alt="" data-default="http://js.dev.meixincdn.com:1314/CDN8053/dist/images/public/circle-default-head.jpg" data-edit="btn")
                  div.preview-btns
                    a.preview-btns-submit(data-action="avatarSave" href="javascript:;") 确定
                    a.preview-btns-cancel(data-action="cancel" href="javascript:;") 取消
              div.upload-img
                div.picker(data-defaultAddFile="picker")
                  img(src="" style="display: none")
                p.topic-limit 图片尺寸建议不小于750x375像素，支持jpg、jpeg、png格式
                    
              div.upload-success(style="display: none")
                img.upload-success-img(style="display: none" src="")    
              div.input-topic
                  input.input-txt(autocomplete="off" data-node="topicTitle" id="topicTitle" type="text")
                  label.topic-txt(data-node="topicTitleTips" for="topicTitle" stype="display:none") "请输入话题标题"
                      span (必填)
                  p.content_discuss_tips
                      span(data-node="titleCharLen") 4
                      
                      span(data-node="titleCharMaxLen") 50

              script(type="text/plain" id="editor")

            div.wrap-box.whtie-bg
                div.publish-label-created
                    ol.label-crt-lists.clearfix(data-node="crt-lists")
                div.publish-label.clearfix
                    i.pub-lab-icon
                    div.pub-label-hover(data-node="lab-title")
                        span.label-hover-title 添加标签
                        span.label-hover-choose (必选)
                    input.pub-lab-cont(type="text" maxlength="15" name="label" data-node="lab-cont")

                    div#wrapper.pub-search-lenovo(data-node="search-lenovo")
                        ul.label-lists.clearfix(id="scroller" data-node="label-lists")
                            li.label-frist-items(data-node="frist-items")
                                span 创建新标签
                            ul.label-list-search.clearfix(data-node="list-search")

                div.publish-form
                    span.pub-for-title 发布的圈子
                        span.red ("必选")
                    a.btn-or-md(data-action="selectGroup" data-groupid="" href="javascript:;") 选择圈子
                    a.btn-red-md(data-action="publishTopic" href="javascript:;") 发布
                    a.btn-red-md.btn-yl(data-action="publishPreview" href="javascript:;") 预览

            div.more-preview
                div.preview-title0
                div.preview-content
                ul.preview-label.clearfix
                div.preview-publish.clearfix
                    a.btn-red-md(href="javascript:;" data-action="publishTopic") 发布
                    a.btn-edit( href="javascript:;") 继续编辑
                    
            script(src="../../js/conf/vendor.js")
            script(src="../../../src/js/plugin/jquery.cropper.js")
            script(src="../../../src/js/plugin/webuploader/webuploader.js")
            script(src="../../js/conf/publishTopic.js")
