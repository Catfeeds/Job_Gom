doctype html
html(lang="zh-CN")
    include ../../../../../gomeplusUI/pc/src/jade/head.jade
    body.opg.lg-bg
        link(type="text/css",rel="stylesheet",href="../../css/public/public.css")
        link(type="text/css",rel="stylesheet",href="../../css/module/login/login.css")
        .lg-header
            .lg-header-in
                h1.lg-logo
                    a 国美plus
        .lg-main
            //步骤 开始
            ul.lg-steps.clearfix
                li.active
                    em 1
                    | 填写用户名
                li
                    em 2
                    | 验证身份
                li
                    em 3
                    | 设置新密码
                li
                    em 4
                    | 重置完成
            //步骤 结束
            div.lg-form
                ul.lg-form-list
                    .lg-error-tip.none.clearfix
                        em.icon.icon-error &#xe983;
                        span 您已三次输入错误，请输入验证码
                    li.clearfix.lg-form-it
                        label 手机号
                        div.lg-form-cont
                            em.lg-allright
                            input.lg-input-it(type="text" placeholder="请输入11位有效手机号") 
                        span.lg-warm 
                    li.clearfix.lg-form-it.lg-form-error
                            label 验证码
                            div.lg-form-cont
                                input.lg-input-it.lg-input-short(type="text" placeholder="请输入验证码")
                                img.img-code(src="https://authcode.jd.com/verify/image?a=0&acid=16df2e7f-bccd-44b1-b2d0-9197b9c3114c&uid=16df2e7f-bccd-44b1-b2d0-9197b9c3114c&srcid=reg&is=232d8947c993ee6abbd1737f36e75c7d&yys=1463892622178")
                                a.change-txt(href="javascript:;") 换一张
                            span.lg-warm 验证码填写错误，请重新输入
                a.pc-btn.pc-btnw300.pc-btnh45.lg-mt(href="javascript:;") 下一步
        include ../../../../../gomeplusUI/pc/src/jade/footer.jade



